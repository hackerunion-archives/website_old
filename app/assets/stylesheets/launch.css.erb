/* Bootstrap Stuff */

body {
	background: #F4F5ED;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 34px;
    color: #514034;
}

p {
	margin: 0;
	padding: 0;
}

p, ol, ul, td {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 12px;
	line-height: normal;
}

h1, h2, h3, h4 {
	margin: 0;
	padding: 0;
    letter-spacing: -0.05em;	
}

a {
  color: #ff5a3e;
}

a:hover, a:active {
	text-decoration: underline;
	background: none;
	color: inherit;
}

.user-info input, .hacker-essay textarea {
	border: none;
}

.user-info input {
	padding: 5px;
	font: 30px/normal 'Helvetica Neue', Helvetica, Arial, sans-serif;
	width: 400px;
	height: 40px;
	color: #ff5a3e;
}

input:focus,
textarea:focus {
	outline: none;
	border: none;
}

.btn {
	font-size: 20px;
	line-height: 24px;
	letter-spacing: normal;
	background: #ff5a3e;
	color: #fff;
	font-weight: bold;
	padding: 6px 30px;
	text-decoration: none;
	text-shadow: none;
	border: none;
	
	-webkit-border-radius: 2px;
	   -moz-border-radius: 2px;
	        border-radius: 2px;

	-webkit-box-shadow: none;
	   -moz-box-shadow: none;
	        box-shadow: none;

	/*
	-webkit-transition: background-color 100ms ease-in-out;
	   -moz-transition: background-color 100ms ease-in-out;
	     -0-transition: background-color 100ms ease-in-out;
	        transition: background-color 100ms ease-in-out;
	*/        
	
}

.btn:hover {
	text-decoration: none;
	text-shadow: none;
}

.btn:active {
	text-decoration: none;
	text-shadow: none;
}

.btn-primary {
	background-color: #ff5a3e;
	color: #fff;
}

.btn-primary:hover {
	background-color: #e63710;
}

.btn-white {
	background-color: #fff;
	color: #555;
}

.btn-white:hover {
	background-color: #e6e6e6;
}

.btn-brown {
	background-color: #514034;
}

.btn-brown:hover {
	background-color: #795e4a;
	color: white;
}

.btn-black {
	background-color: #333;	
}

.btn-black:hover {
	background-color: #222;
	color: white;
}

.btn-big {
	padding: 15px 50px 20px 50px;
}




