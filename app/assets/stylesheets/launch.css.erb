*{
    margin:0;
    padding:0;
}

#logo {
	background: transparent url(<%= asset_path 'masthead.png' %>) no-repeat top center;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 200px;
	text-indent: -9999px;
}

.section {
    margin:0px;
    height:4000px;
    width:100%;
    float:left;
}

.section h2 {
	font-size: 40px;
	margin-bottom: 40px;
}

.section p {
	font-size: 24px;
}

.section .container {
	padding: 120px 20px 20px 20px !important;
	text-align: center;
}

	.section.beige {background: #F4F5ED;}
	.section.orange {background: #ff5a3e url(<%= asset_path 'workers.png' %>) repeat-x 0 0;}
	.section.white {background: #fff;}
	.section.brown {background: #514034;}

.text-white {
	color: #fff;
}

.steps {
	width: 400px;
	margin: 40px auto;
}

.steps.full {
	width: 100%;
}

.steps .back {
	float: left;
}

.steps .next {
	float: right;
}

.user-info {
	margin: 20px auto;
}

.map {
	background: url(<%= asset_path 'map.png' %>) no-repeat 0 0;
	width: 620px;
	height: 400px;
	margin: 0 auto;
}

ul.cities {
	list-style:none;
	margin: 0 auto;
	padding: 0;
	width: 280px;
}

ul.cities li {
	font-size: 24px;
	cursor: pointer;
	margin: 5px;
	padding: 10px 20px;
	width: auto;

	border-radius: 2px;

}

ul.cities li:hover {
	cursor: pointer;
	background-color: #ff5a3e;
	color: #fff;
}
ul.cities li#selected {
	color: #fff;
}

ul.cities li.newyork:hover,
ul.cities li.newyork#selected {
	background-color: #ff5a3e;
}

ul.cities li.sanfrancisco:hover,
ul.cities li.sanfrancisco#selected {
	background-color: #00aeef;
}

ul.cities li.seattle:hover,
ul.cities li.seattle#selected {
	background-color: #10a15f;
}

ul.cities li.portland:hover,
ul.cities li.portland#selected {
	background-color: #9fa110;
}

ul.cities li.austin:hover,
ul.cities li.austin#selected {
	background-color: #a94899;
}

ul.cities li.boulder:hover,
ul.cities li.boulder#selected {
	background-color: #f7941d;
}

.hacker-essay {
	width: 920px;
	margin: 0 auto;
	
}

.hacker-essay textarea {
    height: 400px;
    width: 440px;
    max-width: 440px;
	font: 24px/normal 'Helvetica Neue',Helvetica, Arial, sans-serif;
	padding: 10px;
	background-color: rgba(255,255,255,.5); 
	border: none;
	color: #514034;

	-webkit-transition: background-color 200ms ease-in-out;
	   -moz-transition: background-color 200ms ease-in-out;
	    -ms-transition: background-color 200ms ease-in-out;
	     -o-transition: background-color 200ms ease-in-out;
	        transition: background-color 200ms ease-in-out;
}

.hacker-essay textarea:focus {
	background-color: #fff;
	
	-webkit-box-shadow: none; 
	   -moz-box-shadow: none; 
	     -o-box-shadow: none; 
	        box-shadow: none;
}

.instructions, .instructions p {
	font-size: 20px;
	text-align: left;
	padding-bottom: 10px; 
}

.instructions b {
	font-size: 20px;
	display: block;
	margin-bottom: 10px;
}