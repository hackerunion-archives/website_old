- model_class = @announcement.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @announcement.title
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @announcement.text
%p
  %strong= model_class.human_attribute_name(:created_at) + ':'
  %br
  = @announcement.created_at
%p
  %strong= model_class.human_attribute_name(:approved) + ':'
  %br
  = @announcement.approved
%p
  %strong= model_class.human_attribute_name(:member) + ':'
  %br
  = link_to @announcement.member.email, member_path(@announcement.member)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), announcement_path, class: 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_announcement_path(@announcement), class: 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), announcement_path(@announcement), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), class: 'btn btn-danger'
