- model_class = Member.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize

= search_form_for @q do |f|
  = f.label 'Affiliation like:'
  = f.text_field :affiliations_name_cont
  = f.submit

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:affiliations)
  %tbody
    - @members.each do |member|
      %tr
        %td= link_to member.id, member_path(member)
        %td= member.name
        %td= member.email
        %td= affiliations_list_for(member)