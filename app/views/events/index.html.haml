%h1 Listing events

%table
  %tr
    %th Title
    %th Description
    %th Start time
    %th End time
    %th Pending
    %th Member
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.title
      %td= event.description
      %td= event.start_time
      %td= event.end_time
      %td= event.pending
      %td= event.member_id
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete

