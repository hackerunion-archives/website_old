%h2.offset1 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
  = devise_error_messages!
  .control-group
    = f.label :email, class: 'control-label'
    .controls
      = f.email_field :email, class: 'text-field'
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'text-field'
  .control-group
    = f.label :password, class: 'control-label'
    .controls
      = f.password_field :password, class: 'password-field'
  .control-group
    = f.label :password_confirmation, class: 'control-label'
    .controls
      = f.password_field :password_confirmation, class: 'password-field'
  .row
    .span2.offset2= f.submit 'Sign up', class: 'btn btn-primary'
= render 'links'
